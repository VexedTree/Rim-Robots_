<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Wooden peg leg. -->

  <RecipeDef ParentName="SyntheticHotswapUpgradeBase">
    <defName>InstallPegLegSynth</defName>
    <label>install peg leg</label>
    <description>Install a peg leg.</description>
    <descriptionHyperlinks><ThingDef>WoodLog</ThingDef></descriptionHyperlinks>
    <jobString>Installing peg leg.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>WoodLog</li>
      </thingDefs>
    </fixedIngredientFilter>	
	<appliedOnFixedBodyParts>
		<li>MechLeg</li>
		<li>SyntheticLeg</li>
	</appliedOnFixedBodyParts>
    <addsHediff>PegLeg</addsHediff>
  </RecipeDef>
  

