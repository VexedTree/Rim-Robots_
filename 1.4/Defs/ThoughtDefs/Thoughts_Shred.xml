        <defName>SyntheticButcher</defName>
        <showBubble>false</showBubble>
        <durationDays>0.0001</durationDays>
        <stackLimit>1</stackLimit>
        <stackedEffectMultiplier>1</stackedEffectMultiplier>
        <stages>
            <li>
                <label>_</label>
                <description>Don't look at me, I'm naked!!! 'O'</description>
                <baseMoodEffect>0</baseMoodEffect>
            </li>
        </stages>
